<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="./src/js/gestionarUsuarios.js" defer></script>
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center">Gestión de Usuarios</h1>
        <a href="/dashboard.html" class="btn btn-primary mt-3">Volver al Dashboard</a>

        <!-- Tabla de ciudades -->
        <div class="card mt-4">
            <div class="card-header">
                <h4>Lista de Usuarios</h4>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#userModalAdd">Agregar
                    Usuario</button>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Email</th>
                            <th>Fecha de alta</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="bodyTable">
                        <!-- Aquí se insertarán las filas de la tabla -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Modal para agregar usuario -->
        <div class="modal fade" id="userModalAdd" tabindex="-1" aria-labelledby="userModalLabelAdd" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="userModalLabel">Agregar Usuario</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="addForm">
                            <div class="mb-3">
                                <label for="userNameAdd" class="form-label">Nombre</label>
                                <input type="text" class="form-control" id="userNameAdd" placeholder="Ingrese el nombre"
                                    required>
                            </div>
                            <div class="mb-3">
                                <label for="userLastNameAdd" class="form-label">Apellido</label>
                                <input type="text" class="form-control" id="userLastNameAdd"
                                    placeholder="Ingrese el apellido" required>
                            </div>
                            <div class="mb-3">
                                <label for="userEmailAdd" class="form-label">Email</label>
                                <input type="text" class="form-control" id="userEmailAdd" placeholder="Ingrese el email"
                                    required>
                            </div>
                            <div class="mb-3">
                                <label for="userPasswordAdd" class="form-label">Contraseña</label>
                                <input type="text" class="form-control" id="userPasswordAdd"
                                    placeholder="Ingrese la contraseña" required>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Guardar</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal para editar usuario -->
        <div class="modal fade" id="userModalEdit" tabindex="-1" aria-labelledby="userModalLabelEdit"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="userModalLabelEdit">Editar Usuario</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="editForm">
                            <div class="mb-3">
                                <label for="userIdEdit" class="form-label">ID</label>
                                <input type="text" class="form-control" id="userIdEdit" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="userNameEdit" class="form-label">Nombre</label>
                                <input type="text" class="form-control" id="userNameEdit"
                                    placeholder="Ingrese el nombre" required>
                            </div>
                            <div class="mb-3">
                                <label for="userLastNameEdit" class="form-label">Apellido</label>
                                <input type="text" class="form-control" id="userLastNameEdit"
                                    placeholder="Ingrese el apellido" required>
                            </div>
                            <div class="mb-3">
                                <label for="userEmailEdit" class="form-label">Email</label>
                                <input type="text" class="form-control" id="userEmailEdit"
                                    placeholder="Ingrese el email" required>
                            </div>
                            <div class="mb-3">
                                <label for="userPasswordEdit" class="form-label">Contraseña</label>
                                <input type="text" class="form-control" id="userPasswordEdit"
                                    placeholder="Ingrese las contraseña" required>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Guardar</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal para eliminar ciudad -->
        <div class="modal fade" id="userModalDelete" tabindex="-1" aria-labelledby="cityModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="cityModalLabel">Eliminar Usuario</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="deleteForm">
                            <h3>¿Estas seguro de eliminar?</h3>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>